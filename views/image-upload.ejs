<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <title>
        <%= pageTitle %>
    </title>
</head>

<body>
<div class="container">
    <a href="/" class="text-decoration-none lead text-black-50 mt-3">
        Return to Home Page
    </a>
    <div class="mt-3">
        <form action="/image-upload" method="POST" enctype="multipart/form-data">
            <label for="image" class="form-label">Select an image (jpeg, jpg, png supported)</label>
            <input class="form-control" type="file" name="image" id="image">
            <button class="btn btn-primary mt-3" type="submit" id="uploadBtn">Upload Image</button>
        </form>
    </div>
    <div class="mt-3">
        <% if (error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } else if (message) { %>
            <div class="alert alert-primary" role="alert">
                <%= message %>
            </div>
        <% } %>
        <div class="invisible alert alert-warning" role="alert" id="uploadingStatus">
            Uploading...
        </div>
    </div>
</div>

<script>
    window.onload = () => {
        const uploadBtn = document.getElementById('uploadBtn');
        const uploadingStatus = document.getElementById('uploadingStatus');

        uploadBtn.addEventListener('click', () => {
            uploadingStatus.classList.replace('invisible', 'visible');
        })
    }

</script>

</body>

</html>